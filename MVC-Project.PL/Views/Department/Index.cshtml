@model  IEnumerable<ReturnDepartmentDto>
@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center">All Departments</h1>



<div class="CreateButton">


    <a class=" btn btn-primary" asp-controller="Department" asp-action="Create"> Create Department</a>
</div>






<div class="Tables">

    @if (Model.Count() > 0)
    {

        <table class="table table-striped mt-3">

            <thead>
                <tr class="text-center">
                    <th scope="col">@Html.DisplayNameFor(d => d.Code)</th>
                    <th scope="col">@Html.DisplayNameFor(d => d.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(d => d.CreationDate)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>

                </tr>
            </thead>

            <tbody class="text-center">


                @foreach (var department in Model)
                {

                    <tr>

                        <td>@department.Code</td>
                        <td>@department.Name</td>
                        <td>@department.CreationDate</td>
                        <td>


                            <a class="btn btn-primary" asp-controller="Department" asp-action="Details" asp-route-id=@department.Id>

                                <i class="fas fa-eye"></i>
                                Details

                            </a>
                        </td>


                        <td>


                            <a class="btn btn-success" asp-controller="Department" asp-action="Edit" asp-route-id=@department.Id>

                                <i class="fas fa-edit"></i>
                                Update

                            </a>
                        </td>



                        <td>


                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <i class="fas fa-trash"></i>
                                Delete
                            </button>


                        </td>


                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Department</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this department?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>


                                        <form method="post" asp-action="Delete" asp-route-id=@department.Id>

                                            <div asp-validation-summary="ModelOnly"></div>

                                            <input type="submit" class="btn btn-danger" value="Delete">



                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </tr>


                }


            </tbody>

        </table>

    }


    else
    {


        <div class="alert alert-info mt-3">
            <h2>No Departments found</h2>

        </div>


    }
</div>




