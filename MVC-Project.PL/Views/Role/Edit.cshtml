@model RolesViewModel
@{
    ViewData["Title"] = "Edit";

}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Edit Role</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger fw-bold"></span>
                </div>


                <h3>Assign User to Roles</h3>


                <div class="form-group">

                    @for(int i=0; i<Model.Users.Count; ++i)
                    {
                        

                        <div class="form-check">



                            <input  hidden asp-for="Users[i].UserId"/>
                            <input  hidden asp-for="Users[i].UserName"/>
                            <input  class="form-check-input" asp-for="Users[i].IsSelected"/>

                            <label class="form-check-label">@Model.Users[i].UserName</label>


                            </div>  

                    }

                </div>

 



                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Edit
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationScripts {



    <partial name="_ValidationScriptsPartial"></partial>

}
