@model CreateEmployeeDto


@{
    ViewData["Title"] = "Create";


}

<div class="mt-4">

    <h3 class=" text-center">Create Employee</h3>

</div>


<div class="container  p-5  justify-content-center mt-2">


    <div class="container Form-container p-3 m-auto w-75 border border-1 border-dark ">





        <form method="post" asp-action="Create" asp-antiforgery="true" enctype="multipart/form-data">


            <div asp-validation-summary="ModelOnly"></div>


            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger fw-bold"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger fw-bold"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input class="form-control" asp-for="Address">
                <span asp-validation-for="Address" class="text-danger fw-bold"></span>

            </div>


            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input class="form-control" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger fw-bold"></span>

            </div>


            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input class="form-control" asp-for="Age" type="number">
                <span asp-validation-for="Age" class="text-danger fw-bold"></span>
            </div>


            <div class="mb-3">
                <label asp-for="HiringDate" class="form-label">Hiring Date</label>
                <input class="form-control" asp-for="HiringDate" type="date">
                <span asp-validation-for="HiringDate" class="text-danger fw-bold"></span>
            </div>




            <div class="mb-3">
                <label asp-for="Salary" class="form-label">Salary</label>
                <input class="form-control" asp-for="Salary">
                <span asp-validation-for="Salary" class="text-danger fw-bold"></span>

            </div>



            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>

                <div>


                    @foreach (var val in Enum.GetValues(typeof(Gender)))
                    {

                        <div class="form-check">
                            <input type="radio" asp-for="Gender" class="form-check-input" value="@val">
                            <label class="form-check-label">
                                @val
                            </label>
                        </div>
                    }

                    <span asp-validation-for="Gender" class="text-danger fw-bold"></span>

                </div>

            </div>


            <div class="mb-3">


                <label>Employee Type</label>
                <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()"
                        class="form-control">

                    <option value="">-- Select Employee Type --</option>
                </select>

            </div>



            <div class="mb-3">


                <label class="form-label" asp-for="DepartmentId">Departments</label>
                <select asp-for="DepartmentId" asp-items=ViewBag.Departments
                        class="form-control">

                    <option value="@null">-- Select Department --</option>
                </select>

            </div>


           



            <div class="mb-3">

                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                <label class="form-check-label" asp-for="IsActive"> Is Active</label>

            </div>







            <div class="mt-3 m-auto">


                <input class="btn btn-primary" type="submit" value="Create" />

                <a asp-action="index" class="btn btn-success">Back to List</a>



            </div>

        </form>

    </div>





</div>

@section ValidationScripts {



    <partial name="_ValidationScriptsPartial"></partial>

}